<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieCatalog" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:datePickerDialogTheme">@style/PickerStyle</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_good_size</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieCatalog</item>
    </style>
    <style name="PickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:background">@color/background</item>
        <item name="android:colorAccent">@color/orange</item>
    </style>
</resources>